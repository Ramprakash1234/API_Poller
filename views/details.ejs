<%var users=JSON.parse(latestusers)%>
<%var wines=JSON.parse(latestwines)%>

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
<style>
	.mdl-grid {
	max-width: 600px;
}
.mdl-card__media {
	margin: 0;
}
.mdl-card__media > img {
	max-width: 100%;
}
.mdl-card__actions {
	display: flex;
	box-sizing:border-box;
	align-items: center;
}
.mdl-card__actions > .mdl-button--icon {
	margin-right: 3px;
	margin-left: 3px;
}
</style>
	<main class="mdl-layout__content" style="width:100vw" >
	<div>
		<div style="vertical-align:top;width:20%;margin:15px 200px;display:inline-block;">
			<h4 style="text-align:center; color:purple;border:1px solid gray;">Users</h4>
			
			<%for(let i=0;i<users.length;i++){%>
				<figure class="mdl-card__media">
					<img src="<%=users[i].image%>" alt="" />
				</figure>
				<div class="mdl-card__title">
					<h1 class="mdl-card__title-text"><%=users[i].name%></h1>
				</div>
				<div class="mdl-card__supporting-text">
					<p>Username: <%=users[i].userName%></p>
					<p>E-Mail: <%=users[i].eMail%></p>
					<p>Password: <%=users[i].password%></p>
				</div>
			<%}%>	
		</div>
		
		
		<div style="vertical-align:top;width:20%;margin:15px 200px;display:inline-block;">
			<h4 style="text-align:center; color:purple;border:1px solid gray;">Wines</h4>
			<%for(let j=0;j<wines.length;j++){%>
			<figure class="mdl-card__media">
					<img src="<%=wines[j].image%>" alt="" />
				</figure>
				<div class="mdl-card__title">
					<h1 class="mdl-card__title-text"><%=wines[j].name%></h1>
				</div>
				<div class="mdl-card__supporting-text">
					<p>Instruction: <%=wines[j].instruction%></p>
				</div>
			<%}%>
		</div>
	</div>
</main>
<a id="reload" href="/"></a>
<script>
let reload=document.querySelector("#reload");
	
	setInterval(function(){
		reload.click();
	},15000);
</script>